#!/usr/bin/env python3
import sys
import os
from pyport import swarm as sw


port_api = sw.create_api_string(sys.argv, 1)
token = sw.generate_token(os.environ['PORT_USER'], os.environ['PORT_PASS'], port_api)

secret_id = list(filter(lambda x: x['Spec']['Name'] == sys.argv[1], sw.list_secrets(token)))[0]['ID']

rem = sw.remove_secret(
    token,
    sys.argv[1],
    s = port_api
)

print(rem.text)

